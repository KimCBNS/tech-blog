<div class="row">
  <div class="col-auto">
    <h2>Welcome to the edit page, {{currentUser.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit this Existing Blog:</h3>

    <form class="form update-form">
      <div class="form-group">
        <label for="blog-title">blog title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" value="{{title}}"/>
      </div>
      <input type="hidden" value={{id}} id="blog-id">
      <div class="form-group">
        <label for="blog-content">blog content:</label>
        <textarea class="form-input" id="blog-content" name="blog-content">{{contents}}</textarea>
           
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update blog</button>
      </div>
    </form>
  </div>

</div>

<script src="/js/update.js"></script>
